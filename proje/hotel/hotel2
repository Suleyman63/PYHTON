def helpInputParams (numberHotels, numberFloors, numberRooms):
    indexHotel = indexFloor = indexRoom = 0
    while (indexHotel == 0):
        try:
            indexHotel = int(input("Operation bezieht sich auf welches Hotel (Index: 1..%s) ? " % numberHotels))
        except ValueError:
            indexHotel = 0
    while (indexFloor == 0):
        try:
            indexFloor = int(input("Operation bezieht sich auf welche Etage (Index: 1..%s) ? " % numberFloors))
        except ValueError:
            indexFloor = 0
    while (indexRoom == 0):
        try:
            indexRoom = int(input("Operation bezieht sich auf welche Zimmernummer (Index: 1..%s) ? " % numberRooms))
        except ValueError:
            indexRoom = 0

    return indexHotel, indexFloor, indexRoom


nrHotels = nrFloors = nrRooms = 0
while (nrHotels == 0):
    try:
        nrHotels = int(input("Anzahl Hotels? "))
    except ValueError:
        nrHotels = 0
    
while (nrFloors == 0):
    try:
        nrFloors = int(input("Anzahl Etagen pro Hotel? "))
    except ValueError:
        nrHotels = 0

while (nrRooms == 0):
    try:
        nrRooms = int(input("Anzahl Räume pro Etage? "))
    except ValueError:
        nrRooms = 0

belegungsPlan = [[["frei" for i in range(nrRooms)] for j in range(nrFloors)] for k in range(nrHotels)]

action = "1"
while (action != "0"):
    action = input("\nWelche Operation soll ausgeführt werden?\n"
                   "[1] = Zimmer belegen\n"
                   "[2] = Zimmer freigeben\n"
                   "[3] = Zimmer-Status abfragen\n"
                   "[4] = Freie Zimmer für ein Stockwerk abfragen\n"
                   "[0] = Beenden\n")

    if (action == "1") or (action == "2") or (action == "3"):
        hotel, floor, room = helpInputParams (nrHotels, nrFloors, nrRooms)
        if (hotel > nrHotels) or (floor > nrFloors) or (room > nrRooms):
           print ("Diese Hotelnummer / Etagennummer / Zimmernummer gibt es nicht !")
        else:
            if (action == "1"):
                if (belegungsPlan[hotel-1][floor-1][room-1] == "frei"):
                    belegungsPlan[hotel-1][floor-1][room-1] = "belegt"
                    print ("Zimmer %s auf Etage %s in Hotel %s ist jetzt belegt" % (room, floor, hotel))
                else:
                    print ("Operation nicht möglich, denn Zimmer %s auf Etage %s in Hotel %s ist bereits belegt" % (room, floor, hotel))

            if (action == "2"):
                if (belegungsPlan[hotel-1][floor-1][room-1] == "belegt"):
                    belegungsPlan[hotel-1][floor-1][room-1] = "frei"
                    print ("Zimmer %s auf Etage %s in Hotel %s ist jetzt wieder frei" % (room, floor, hotel))
                else:
                    print ("Operation nicht möglich, denn Zimmer %s auf Etage %s in Hotel %s ist nicht belegt" % (room, floor, hotel))

            if (action == "3"):
                if (belegungsPlan[hotel-1][floor-1][room-1] == "frei"):
                    print ("Zimmer %s auf Etage %s in Hotel %s ist frei" % (room, floor, hotel))
                else:
                    print ("Zimmer %s auf Etage %s in Hotel %s ist belegt" % (room, floor, hotel))

    if (action == "4"):
        hotel = floor = 0
        while (hotel == 0):
            try:
                hotel = int(input("Operation bezieht sich auf welches Hotel (Index: 1..%s) ? " % nrHotels))
            except ValueError:
                hotel = 0
        while (floor == 0):
            try:
                floor = int(input("Operation bezieht sich auf welche Etage (Index: 1..%s) ? " % nrFloors))
            except ValueError:
                floor = 0

        if (hotel > nrHotels) or (floor > nrFloors):
           print ("Diese Hotelnummer / Etagennummer gibt es nicht !")
        else:
            sum = 0
            for i in range(len(belegungsPlan[hotel-1][floor-1])):
                if (belegungsPlan[hotel-1][floor-1][i] == "frei"):
                    sum += 1
            print ("Auf der Etage %s in Hotel %s sind %s Zimmer unbelegt." % (floor, hotel, sum))